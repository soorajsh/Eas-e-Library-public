            </div>
        </div>
        <!-- Location Section -->
        <div class="location-adjuster">
            <div class="location-header">
                <span class="jumptarget" id="location"></span>
                <h2 class="location-block">Location</h2>
            </div>
            <div class="location-details">
                <!-- <div class="mapouter">
						        <div class="openstreetmap">
						          <iframe width="100%" height="500" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=85.3377065062523%2C27.670889077744373%2C85.33976107835771%2C27.672152806610313&amp;layer=mapnik&amp;marker=27.671520944004342%2C85.33873379230499" style="border: 1px solid black"></iframe><br/><small><a href="https://www.openstreetmap.org/?mlat=27.67152&amp;mlon=85.33873#map=19/27.67152/85.33873">View Larger Map</a></small>

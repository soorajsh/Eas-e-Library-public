    </div>
    <div class="modal" id="modal">
        <div class="modal-dialog">
            <section class="modal-content">
                <section class="modal-header">
                    <h2 class="modal-title">Member Sign in</h2>
                    <a href="#" class="modal-close"
                        onclick="document.getElementById('header').style.position='fixed';">&times;</a>
                </section>
                <div class="modal-body">
                    <form action="/members/signin" method="POST"
                        onsubmit="document.getElementById('modal2').style.display='table';document.getElementById('modal').style.display='block';">
                        <% if(typeof errors_signin != 'undefined'){ %>
                        <div class="modal2" id="modal2" style="display: table;"
                            onclick="document.getElementById('modal2').style.display='none';">
                            <div class="modal-dialog2">
                                <section class="modal-content2">
                                    <section class="modal-header2">
                                        <h2 class="modal-title2">Error</h2>
                                        <a href="#" class="modal-close2">&times;</a>
                                    </section>
                                    <div class="modal-body2" style="font-size:xx-large; text-align: center;">
                                        <% errors_signin.forEach(function(error){ %>
                                        <%= error.msg %>
                                        <%}); %>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <%} %>


                        <div class="signin-input">
                            <span>Email: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="email" name="email" id="email" required="required"
                                    value="<%= typeof email!='undefined' ? email : '' %>" /></span>
                        </div>
                        <div class="signin-input">
                            <span>Password:&nbsp;&nbsp;&nbsp;
                                <input type="password" name="passwd" id="passwd" required="required"
                                    value="<%= typeof passwd!='undefined' ? passwd : '' %>" /></span>
                        </div>
                        <div style="text-align: center;">
                            <input type="submit" value="Submit" class="submit-signin">
                            <p style="font-size:medium; text-align: center; margin-top: 0;margin-bottom: 0;">OR</p>
                            <a href="/staffs/staffsignin" class="forgot-link"
                                onclick="document.getElementById('header').style.position='fixed';">Staff Sign In</a>
                        </div>
                    </form>
                    <hr>
                    <div style="text-align: center;">
                        <a href="/members/signup" class="submit-request">Request New Account</a>
                    </div>
                </div>
            </section>
        </div>
    </div>

</body>

